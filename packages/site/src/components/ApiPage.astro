---
import { Code } from "@astrojs/starlight/components";
import ImportCode from "./ImportCode.astro";
import Example from "./Example.astro";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import { type ExampleProps, normalizeExample } from "./../utils/examples.ts";

interface Props {
  name: string;
  imports?: string[];
  description?: string;
  definition: string;
  examples?: (ExampleProps | { default: string })[];
}
const props = Astro.props;
const examples = props.examples?.map(normalizeExample);
const definition = normalizeDeclare(props.definition);

function normalizeDeclare(value: string) {
  const pattern = 'declare module "dreamkit/definitions" {';
  let declaring = false;
  return value
    .split("\n")
    .map((line) => {
      if (line === pattern) {
        declaring = true;
        return null;
      } else if (declaring) {
        if (line === "}\n") {
          declaring = false;
          return null;
        } else return line.startsWith("  ") ? line.slice(2) : line;
      } else {
        return line;
      }
    })
    .filter((v) => typeof v === "string")
    .join("\n")
    .replace(/}\n$/, "");
}
---

<StarlightPage
  frontmatter={{
    title: props.name,
  }}
  headings={[
    { depth: 2, text: "Description", slug: "Description" },
    { depth: 2, text: "Import", slug: "import" },
    { depth: 2, text: "Definition", slug: "definition" },
    ...(examples
      ? [
          { depth: 2, text: "Examples", slug: "examples" },
          ...examples.map((ex) => ({
            depth: 3,
            text: ex.title,
            slug: ex.id,
          })),
        ]
      : []),
  ]}
>
  <h2 id="description">Description</h2>

  <p>{props.description}</p>

  <slot />

  <h2 id="import">Import</h2>

  <ImportCode name={props.imports || props.name} />

  <h2 id="definition">Definition</h2>

  <Code lang="ts" code={definition} />

  {
    examples && (
      <>
        <h2 id="examples">Examples</h2>
        {examples.map((example) => (
          <Example {...example} />
        ))}
      </>
    )
  }

  <style>
    h2:not(#description) {
      margin-top: 1.5rem !important;
    }
  </style>
</StarlightPage>
